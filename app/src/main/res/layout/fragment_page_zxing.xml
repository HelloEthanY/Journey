<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.journey.org.ui.main.home_technology.pagezxing.PageZxingViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editor_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_generate_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生成二维码"
            app:layout_constraintTop_toBottomOf="@+id/editor_content" />

        <ImageView
            android:id="@+id/iv_show_qr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_400"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_generate_qr" />


    </android.support.constraint.ConstraintLayout>
</layout>

